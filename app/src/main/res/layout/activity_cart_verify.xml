<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteTwo"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorLight">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/xanh6" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="20dp"
            android:layout_height="40sp"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:padding="18dp"
            android:gravity="center"
            android:layout_marginTop="15sp"
            android:layout_marginStart="15sp"
            android:background="@drawable/icon_back"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/product_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:paddingBottom="19dp"
            android:src="@drawable/logo_back_ground" />

        <ImageView
            android:id="@+id/img_call"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:padding="12dp"
            android:src="@drawable/icon_phone_gray"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="67dp"
        android:background="@color/whiteTwo">

        <EditText
            android:id="@+id/edt_sdt"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="31dp"
            android:background="@drawable/bg_light_radius"
            android:hint="Số điện thoại"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="12dp"
            android:paddingRight="10dp"
            android:textSize="16sp" />

    </RelativeLayout>

    <EditText
        android:id="@+id/edt_password"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="31dp"
        android:background="@drawable/bg_light_radius"
        android:hint="PassWord"
        android:paddingLeft="12dp"
        android:paddingRight="5dp"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/edt_fullname"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="31dp"
        android:background="@drawable/bg_light_radius"
        android:hint="Họ và tên"
        android:paddingLeft="12dp"
        android:paddingRight="5dp"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/edt_gmail"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="31dp"
        android:background="@drawable/bg_light_radius"
        android:hint="Email"
        android:paddingLeft="12dp"
        android:paddingRight="5dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TextView_birthday"
        style="@style/Widget.AppCompat.TextView"
        android:background="@drawable/bg_light_radius"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="31dp"
        android:hint="Ngày sinh"
        android:paddingLeft="12dp"
        android:paddingRight="5dp"
        android:textSize="16sp"
        android:gravity="center_vertical"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:background="@drawable/bg_light_radius"
        android:layout_marginLeft="31dp"
        android:layout_toRightOf="@+id/TextView_sex"
        android:layout_marginTop="10dp"
        android:layout_marginRight="31dp">
        <TextView
            android:id="@+id/TextView_sex"
            android:layout_width="wrap_content"
            android:layout_height="45sp"
            android:text="Giới Tính"
            android:textSize="16sp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="31dp"/>
        <RadioGroup
            android:id="@+id/RadioGr_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/TextView_sex"
            android:orientation="horizontal">
        <RadioButton
            android:id="@+id/Radio_sexnam"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="31dp"
            android:text="Nam"
            android:paddingLeft="12dp"
            android:paddingRight="5dp"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        <RadioButton
            android:id="@+id/Radio_sexnu"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/Radio_sexnam"
            android:layout_height="45dp"
            android:text="Nữ"
            android:paddingLeft="12dp"
            android:paddingRight="5dp"
            android:textSize="16sp"
            android:gravity="center_vertical"/>
        </RadioGroup>
    </RelativeLayout>


