    <Spinner
        android:id="@+id/spinner_congty"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_light_radius"
        android:contextClickable="false"
        android:visibility="gone" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginTop="-35dp"
        android:padding="10dp"
        android:src="@drawable/ic_dropdown"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorLight"
        android:backgroundTint="@color/colorLight"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="12dp"
        android:gravity="center"
        android:text="Ngày sinh"
        android:textColor="@color/colorDark"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorLightDF"
        android:gravity="center"
        android:inputType="number"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/colorDark"
        android:textCursorDrawable="@null"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox_rules"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:buttonTint="@color/colorDark"
            android:checked="false"
            android:text="Tôi đồng ý với mọi"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/rules"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="điều khoản của tập đoàn"
            android:textColor="@color/DarkBlue"
            android:textSize="13sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/errorText"
        android:layout_width="300sp"
        android:layout_marginStart="75sp"
        android:layout_height="25sp"
        android:text="@null"
        android:layout_marginTop="10sp"
        android:textColor="@color/appRed"/>

    <TextView
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="31dp"
        android:background="@drawable/bg_red_radius"
        android:gravity="center"
        android:text="ĐĂNG KÝ"
        android:textColor="@color/colorLight"
        android:textSize="16sp" />


</LinearLayout>