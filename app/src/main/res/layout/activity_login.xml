<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xanh6"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="36dp"
        android:gravity="center"
        android:paddingBottom="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:src="@drawable/logo_back_ground" />

        <EditText
            android:id="@+id/edt_sdt"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_light_radius"
            android:hint="Nhập số điện thoại"
            android:inputType="number"
            android:maxLength="10" />
        <EditText
            android:id="@+id/edt_mk"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.TextView"
            android:background="@drawable/bg_light_radius"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/TextView_login"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_red_radius"
            android:text="ĐĂNG NHẬP"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorLight"
            android:gravity="center"
            android:textSize="20sp"
            />
        <FrameLayout
            android:background="@color/colorLight"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="27dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản ?"
            android:layout_marginTop="16dp"
            android:textColor="@color/colorLight"
            android:gravity="center"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dark_radius"
            android:text= " ĐĂNG KÝ "
            android:layout_marginTop="14dp"
            android:fontFamily=""
            android:textColor="@color/colorLight"
            android:gravity="center"
            android:textSize="20sp"
            />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/progress_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone"
        android:background="@color/colorDarkTransparent">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"/>
    </FrameLayout>
</RelativeLayout>