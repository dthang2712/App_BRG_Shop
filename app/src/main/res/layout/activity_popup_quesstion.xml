<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="30dp"
        android:paddingBottom="35dp">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="27sp"
            android:gravity="center"
            android:text="Bạn có chắc muốn xóa địa chỉ này ?"
            android:textColor="@color/colorDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/huy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:layout_toStartOf="@+id/position"
            android:layout_weight="1"
            android:background="@drawable/bg_red_border_radius"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="Hủy bỏ"
            android:textColor="@color/appRed"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/position"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/position"
            android:layout_weight="1"
            android:layout_below="@id/message"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_red_radius"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="Đồng ý"
            android:textColor="@color/colorLight"
            android:textSize="16sp" />

    </RelativeLayout>



</RelativeLayout>