<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:background="@drawable/bg_gach_duoi">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"/>
        <TextView
            android:id="@+id/TextView_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkbox"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingHorizontal="10sp"
            android:text="Bánh quy hộp kẹp kem vị vani Bourbon Roanne Vallina 85g"
            android:textColor="@color/colorDark"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TextView_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView_product"
            android:layout_toRightOf="@+id/checkbox"
            android:ellipsize="end"
            android:paddingHorizontal="10sp"
            android:text="31.000đ"
            android:textColor="@color/appRed"
            android:textSize="15sp"
            android:layout_marginTop="5sp"/>

        <TextView
            android:id="@+id/TextView_PriceDisscound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/checkbox"
            android:layout_below="@+id/TextView_price"
            android:paddingHorizontal="10sp"
            android:text="45.000đ"
            android:textColor="@color/grayAeb"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/TextView_PriceDisscound"
            android:layout_alignEnd="@+id/TextView_PriceDisscound"
            android:layout_alignBottom="@+id/TextView_PriceDisscound"
            android:layout_alignParentStart="true"
            android:layout_marginStart="57sp"
            android:layout_marginTop="1sp"
            android:layout_marginEnd="12sp"
            android:background="@drawable/line" />
        <LinearLayout
            android:id="@+id/Amout_layout"
            android:layout_width="wrap_content"
            android:layout_height="33sp"
            android:layout_below="@+id/TextView_product"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32sp"
            android:background="@drawable/bg_gray_border_radius"
            android:layout_marginTop="7sp">

        <TextView
            android:id="@+id/minus"
            android:layout_width="20sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="-"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/amount"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gray_boder"
            android:gravity="center"
            android:textColor="@color/appBlack"
            android:inputType="number"
            android:text="1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="+"
            android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>