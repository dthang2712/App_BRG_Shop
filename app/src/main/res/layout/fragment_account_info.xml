<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/whiteTwo"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorLight">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/xanh6" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="14sp"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:visibility="gone"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/product_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:paddingBottom="19dp"
            android:src="@drawable/logo_back_ground" />
        <ImageView
            android:id="@+id/img_back_info"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:visibility="visible"
            android:padding="18sp"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/img_call"
            android:layout_width="50dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:paddingRight="17dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/icon_phone_gray2" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="79dp">

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:paddingLeft="27sp"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:background="@color/colorLight"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/default_avatar"
                android:layout_width="20sp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:background="@drawable/bg_default_avatar"
                android:gravity="center"
                android:visibility="invisible"
                android:textColor="@color/appRed"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phạm Hương"
                    android:maxLines="1"
                    android:paddingRight="27sp"
                    android:layout_gravity="top"
                    android:layout_marginTop="10sp"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/colorDark"/>

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phạm Hương"
                    android:maxLines="1"
                    android:textSize="11sp"
                    android:paddingRight="27sp"
                    android:layout_gravity="top"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="12dp"

                    android:textColor="@color/colorGray75"/>

                <TextView
                    android:id="@+id/txt_makhtt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phạm Hương"
                    android:maxLines="1"
                    android:textSize="11sp"
                    android:paddingRight="27sp"
                    android:layout_gravity="top"
                    android:layout_marginLeft="12sp"
                    android:textColor="@color/colorGray75"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/icon_open_profile"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="20dp"
                android:src="@drawable/ic_open"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="27sp"
            android:layout_marginTop="14dp"
            android:background="@color/colorLight"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/donhang"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:paddingVertical="10sp"
                    android:src="@drawable/shopping_histori"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginStart="10sp"
                    android:text="Đơn hàng của bạn"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/icon_open_donhang"
                    android:layout_width="55sp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-55dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_open"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/thongbao"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:paddingVertical="10sp"
                    android:src="@drawable/notification"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Thông báo"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginStart="-55dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_open"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dia_chi_nhan_hang"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:paddingVertical="10sp"
                    android:src="@drawable/placeholder"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Địa chỉ nhận hàng"
                    android:layout_marginStart="10sp"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginStart="-55dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_open"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/danh_sach_sieu_thi"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:paddingVertical="10sp"
                    android:src="@drawable/store_list"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginStart="10sp"
                    android:text="Danh sách siêu thị"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginStart="-55dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_open"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/uu_dai"
                android:layout_width="match_parent"
                android:layout_height="55sp"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:paddingVertical="10sp"
                    android:visibility="visible"
                    android:src="@drawable/medal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:visibility="visible"
                    android:layout_marginStart="10sp"
                    android:text="Ưu đãi của bạn"
                    android:textColor="@color/colorDark"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="55sp"
                    android:layout_height="55sp"
                    android:layout_marginStart="-55dp"
                    android:padding="20dp"
                    android:src="@drawable/ic_open"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/trung_tam_tro_giup"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:background="@color/colorLight"
            android:paddingLeft="27sp"
            android:layout_marginTop="12sp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:paddingVertical="10dp"
                android:src="@drawable/caller"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_marginStart="10sp"
                android:text="Trung tâm trợ giúp"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/icon_open"
                android:layout_width="55sp"
                android:layout_height="55sp"
                android:layout_marginStart="-55dp"
                android:padding="20dp"
                android:src="@drawable/ic_open"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dang_xuat"
            android:layout_width="match_parent"
            android:layout_height="55sp"
            android:background="@color/colorLight"
            android:paddingLeft="27sp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:scaleType="fitStart"
                android:paddingVertical="10sp"
                android:src="@drawable/logout"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_marginStart="10dp"
                android:text="Đăng xuất"
                android:textColor="@color/colorDark"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>